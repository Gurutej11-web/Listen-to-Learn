rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // Lectures belong to users
    match /lectures/{lectureId} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }
    
    // Notes belong to lectures
    match /lectures/{lectureId}/notes/{noteId} {
      allow read, write: if request.auth.uid == get(/databases/$(database)/documents/lectures/$(lectureId)).data.userId;
    }
    
    // Highlights belong to lectures
    match /lectures/{lectureId}/highlights/{highlightId} {
      allow read, write: if request.auth.uid == get(/databases/$(database)/documents/lectures/$(lectureId)).data.userId;
    }
    
    // Flashcards belong to lectures
    match /lectures/{lectureId}/flashcards/{cardId} {
      allow read, write: if request.auth.uid == get(/databases/$(database)/documents/lectures/$(lectureId)).data.userId;
    }
  }
}
